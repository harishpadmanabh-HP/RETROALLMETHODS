<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EmployeeDetailsFragment">

  <LinearLayout
      android:background="#4E0D3A"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="229dp"
          android:background="@mipmap/emh"
          android:elevation="50dp"
          android:fadingEdge="vertical"
          android:fadingEdgeLength="210dp"
          android:outlineAmbientShadowColor="@color/colorAccent" />

      <TextView
          android:id="@+id/displayname"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_margin="50dp"
          android:text="Employee Name"
          android:textColor="#fff"
          android:textSize="25dp" />

      <TextView
          android:id="@+id/displaysalary"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:text="Employee Salary"
          android:textColor="#fff"
          android:textSize="25dp" />

      <TextView
          android:id="@+id/dispage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="20dp"
          android:text="Employee Age"
          android:textColor="#fff"
          android:textSize="25dp" />

      <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
          android:id="@+id/update"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          android:layout_margin="30dp"
          android:layout_marginTop="40dp"
          android:gravity="center"
          android:text="EDIT DETAILS"
          android:textColor="#FFF"
          app:icon="@drawable/ic_people_outline_black_24dp" />
  </LinearLayout>
</FrameLayout>