<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CreateUSerFrag">

    <LinearLayout
        android:background="#FFFFFF"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create new Employee "
            android:textSize="25dp"
            android:textColor="#FF3D00"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:backgroundTint="#720D5D"
            android:hint="Name"

app:hintAnimationEnabled="true"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#F9AA33"
            app:hintTextColor="#FF3D00">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FF1744" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/age"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:backgroundTint="#720D5D"
            android:hint="Age"

            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#F9AA33"
            app:hintTextColor="#2979FF">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textColor="#FF1744" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/salary"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:backgroundTint="#720D5D"
            android:hint="Salary"

            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#F9AA33"
            app:hintTextColor="#3D5AFE">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textColor="#FF1744" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="30dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="CREATE"
            android:textColor="#FFF"
            app:icon="@drawable/ic_people_outline_black_24dp" />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/updateuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Update"
            android:textColor="#FFF"
            app:icon="@drawable/ic_people_outline_black_24dp" />

    </LinearLayout>
</FrameLayout>